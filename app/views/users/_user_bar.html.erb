<% if user_signed_in? -%>
  <div id="user-bar-greeting">Logged in as <%= link_to current_user.email, :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to "Log out", destroy_user_session_path, { :title => "Log out" }    %>)</div>
<% else -%>
  <div id="user-bar-action"  ><%= link_to "Log in",  new_user_session_path,  { :title => "Log in" } %> /
                               <%= link_to "Sign up", new_user_registration_path, { :title => "Create an account" } %></div>
<% end -%>